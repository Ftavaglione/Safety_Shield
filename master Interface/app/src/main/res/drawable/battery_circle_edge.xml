<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cerchio interno trasparente -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
    <!-- Cerchio esterno con bordo nero -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3.3dp"
                android:color="#868686" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
</layer-list>
